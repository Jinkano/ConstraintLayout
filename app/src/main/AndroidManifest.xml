<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.constraintlayout">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            tools:ignore="LockedOrientationActivity">

            <!-- android:screenOrientation="portrait" -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FramelayoutActivity"
            android:label="@string/frame_name" />
        <activity
            android:name=".LinearHorizontalActivity"
            android:label="@string/linear_h_name" />
        <activity
            android:name=".LinearVerticalActivity"
            android:label="@string/linear_v_name" />
        <activity
            android:name=".RelativelayoutActivity"
            android:label="@string/relative_name" />
        <activity
            android:name=".GridlayoutActivity"
            android:label="@string/grid_name" />
        <activity
            android:name=".TablelayoutActivity"
            android:label="@string/table_name" />
    </application>

</manifest>