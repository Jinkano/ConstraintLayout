<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Formato para los titulos (textview MainCTIVITY). -->
    <style name="formatoTextoTitulo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/colorNegro</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Formato para los view (MainCTIVITY). -->
    <style name="formatoView">
        <item name="android:background">@color/colorFondo</item>
        <item name="android:textColor">@color/colorTextoView</item>
    </style>

    <!-- Ancho y alto Button -->
    <style name="anchoAlto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Estilo Boton Regresar -->
    <style name="anchoAlto.buttonRegresar">
        <item name="android:background">@color/colorFondoCardView</item>
        <item name="android:text">@string/txt_Regresar</item>
    </style>

    <!-- Estilo TextView Perú -->
    <style name="formatoTextoTitulo.textViewPeru">
        <item name="android:text">@string/txt_Peru</item>
        <item name="android:textColor">#008577</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo TextView España -->
    <style name="formatoTextoTitulo.textViewEspana">
        <item name="android:text">@string/txt_Espana</item>
        <item name="android:textColor">#d81b60</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Estilo TextView Polonia -->
    <style name="formatoTextoTitulo.textViewPolonia">
        <item name="android:text">@string/txt_Polonia</item>
        <item name="android:textColor">#00574B</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Estilo TextView Comentario -->
    <style name="anchoAlto.tvComentario">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
